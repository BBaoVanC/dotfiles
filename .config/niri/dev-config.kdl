include "config.kdl"

blur {
    passes 3
    offset 3
    noise 0.02
    saturation 1.5
}

window-rule {
    match app-id="^foot$"

    background-effect {
        blur true
        xray false
    }
}

spawn-sh-at-startup "swaybg -i ~/wallpaper -m fill"


binds {
    Mod+Shift+T hotkey-overlay-title="Open a Terminal" { spawn-sh "foot --config ~/.config/foot/dev-foot.ini"; }
}
