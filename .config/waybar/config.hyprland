// vim: ft=jsonc
{
    // "include": "$HOME/.config/waybar/temp_paths",
    "height": 30,
    "spacing": 4,
    "layer": "top",
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/submap"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        //"mpd",
        "idle_inhibitor",
        "custom/media",
        "pulseaudio",
        "network",
        "battery",
        "clock",
        "tray"
    ],
    "hyprland/workspaces": {
        "format": "{icon}{name}",
        "format-icons": {
            "urgent": "ÔÅ± ",
            "special": "Ôãí ",
            "default": ""
        },
        "show-special": true
    },
    "hyprland/submap": {
        "format": "<span style='italic'>{}</span>",
        "on-click": "hyprctl dispatch submap reset",
        "tooltip": false
    },

    "hyprland/window": {
        "format": "{title}"
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ  staying awake",
            "deactivated": "ÔÅ∞ "
        }
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 32,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null"
    },
    "pulseaudio": {
        "on-click": "pavucontrol",
        "format": "{icon} {volume}% {format_source}",
        "format-muted": "Û∞ñÅ {format_source}",
        "format-bluetooth": "{volume}% {icon}ÔñÆ {format_source}",
        "format-bluetooth-muted": "Û∞ñÅ {icon}ÔñÆ {format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "Û∞Ç∞ ",
            "headset": "Û∞ãé ",
            "phone": "Û∞è∂ ",
            "portable": "ÔÇï",
            "car": "ÔÜπ ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },
    "network": {
        // "format-ethernet": "ÔÇ¨ ",
        "format-ethernet": "Û∞àÄ Ethernet",
        "format-wifi": "Ôá´  {essid} ({signalStrength}%)",
        "format-linked": "Ó¨Å {ifname} (No IP)",
        "format-disconnected": "Û∞Ö§  Disconnected",
        "format-disabled": "Û∞Äù Disabled",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
        // for some reason these speeds are not accurate
        // "tooltip-format": "ÔÄô {bandwidthDownBytes} ÔÇì {bandwidthUpBytes}"
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Û∞ÇÑ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon} {time} ({power}W)",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "clock": {
        "interval": 1,
        "format": "{:%I:%M:%S %p}",
        "format-alt": "{:%Y-%m-%d}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "tray": {
        "spacing": 10
    }
}
