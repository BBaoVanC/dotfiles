// vim: ft=jsonc
{
    "height": 30,
    "spacing": 4,
    "layer": "top",
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/submap",
    ],
    "modules-center": [
        "hyprland/window",
    ],
    "modules-right": [
        //"mpd",
        "idle_inhibitor",
        "backlight",
        "custom/media",
        "wireplumber",
        //"wireplumber#microphone",
        "battery",
        "clock",
        "tray",
    ],
    "hyprland/workspaces": {
        "format": "{icon}{name}",
        "format-icons": {
            "urgent": "ÔÅ± ",
            "special": "Ôãí ",
            "default": "",
        },
        "show-special": true,
    },
    "hyprland/submap": {
        "format": "<span style='italic'>{}</span>",
        "on-click": "hyprctl dispatch submap reset",
        "tooltip": false,
    },

    "hyprland/window": {
        "format": "{title}",
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ  staying awake",
            "deactivated": "ÔÅ∞ ",
