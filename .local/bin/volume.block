#!/bin/sh

vol=$(pamixer --get-volume)

if [ "$(pamixer --get-mute)" = "true" ]; then
    echo "婢 $vol%"
else
    volrng="$(expr "$vol" / 50)"
    case $volrng in
        0)
            [ "$vol" = 0 ] && volicon="奄" || volicon="奔"
            ;;
        *)
            volicon="墳"
            ;;
    esac
    echo "$volicon $vol%"
fi
